<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="120dip"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="15dip"
        android:textSize="10dp"
        android:textColor="#0000FF"
        android:textAlignment="center"
        android:text="Please mind!"/>
    <TextView
        android:layout_width="120dip"
        android:layout_height="50dip"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="8dp"
        android:textColor="#0000FF"
        android:text="    Your data plan is running out.\n    Your currently have less than 20 Mbts left on your plan Please log in to your Vodafone account to total up."/>
    <TextView
        android:layout_width="120dip"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="9dp"
        android:textColor="#0000FF"
        android:text="Click to Dismiss"
        android:layout_height="15dip" />
</LinearLayout>
