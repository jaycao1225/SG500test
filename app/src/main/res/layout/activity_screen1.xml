                android:id="@+id/iv_electricity"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/electricity"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
           style="@style/nomal"
           android:text="Plan:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_mbts"
            style="@style/nomal"
            android:text="250 Mbts"/>
        <TextView
            style="@style/nomal"
            android:text="Valid until:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_valid"
            style="@style/nomal"
            android:text="28 FEB 2017"/>
    </LinearLayout>
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
